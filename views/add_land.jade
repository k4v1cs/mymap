extends layout

block content
  div.container
      if message.length
        div.info-message=message
      h1 Új terület hozzáadása
      form(action="/lands/add", method="POST")
        div(class="coordinates input-container clearfix")
            div
                label X
                input(name="x", autocomplete="off")
            div
                label Y
                input(name="y", autocomplete="off")
            div
                label Z
                input(name="z", autocomplete="off")
        div.input-container
            label Típus
            div(class="type-btns clearfix")
                span(class="btn type", data-value="MOUNTAINS") Hegyek
                span(class="btn type", data-value="HOLY LAND") Szent föld
                span(class="btn type", data-value="FOREST") Erdő
                span(class="btn type", data-value="DESERT") Sivatag
                span(class="btn type", data-value="PRAIRIE") Puszta
                span(class="btn type", data-value="CURSED FOREST") Elátkozott erdő
                span(class="btn type", data-value="MAGICAL FOREST") Varázs erdő
                span(class="btn type", data-value="DEAD LAND") Halott föld
                input(type="hidden", name="type")
        div.input-container
            label Mezők száma
            input(name="fields", autocomplete="off")
        div.input-container
            label Város maximális szintje
            input(name="cityLevel", autocomplete="off")
        div.input-container
            label Akadályok száma
            input(name="obstacles", autocomplete="off")
        div.input-container
            label Búza
            input(name="grain.outer", autocomplete="off")
        div.input-container
            label Vas
            input(name="iron.outer", autocomplete="off")
        div(class="input-container clearfix")
            label.main Kő
            div.sub-container
                label.sub Belső
                input(name="stone.inner", autocomplete="off")
            div.sub-container
                label.sub Külső
                input(name="stone.outer", autocomplete="off")
        div(class="input-container")
            input.btn(type="submit", value="Mentés")
        img.picture
        input.picture(type="hidden", name="picture")