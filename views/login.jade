doctype 5html(lang="hu")  head    meta(charset='utf8')    title= title    link(rel='stylesheet', href='/stylesheets/style.css')  body.login    if message && message.length        div.info-message=message    if errors && errors.length        div.error-message            each error in errors                p=error    img.logo(src="/images/static/logo.png")    div.login-container        form(method="post", action="/login")            label Felhasználónév            input(name="login")            label Jelszó            input(type="password", name="password")            input(type="submit", value="Bejelentkezés")